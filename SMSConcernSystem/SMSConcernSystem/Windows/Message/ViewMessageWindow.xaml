<Window x:Class="ViewMessageWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ViewMessageWindow" Height="321.207" Width="502.298" FontSize="14" Loaded="Window_Loaded">
    <Grid Background="#FFB2D6F9">
        <TextBox x:Name="txtSender" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Margin="80,12,10,0" Text="John Smith" TextDecorations="Underline" Foreground="Blue" Cursor="Hand" ToolTip="View sender details" IsReadOnly="True"/>
        <Label Content="From:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,10,0,0" HorizontalContentAlignment="Right"/>
        <Label Content="Message:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,44,0,0" HorizontalContentAlignment="Right"/>
        <TextBox x:Name="txtMessage" TextWrapping="Wrap" Margin="80,46,10,40" IsReadOnly="True"/>
        <Button x:Name="btnRespond" Content="Respond" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,0,10,10"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="69" Margin="0,0,90,10" FontSize="14"/>

    </Grid>
</Window>
