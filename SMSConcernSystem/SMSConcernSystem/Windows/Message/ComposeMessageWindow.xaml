<Window x:Class="ComposeMessageWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ComposeMessageWindow" Height="322" Width="488" Loaded="Window_Loaded">
    <Grid Background="#FFB2D6F9">
        <TextBox x:Name="txtRecipients" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Margin="79,16,10,0" Text="John Smith" TextDecorations="Underline" Foreground="Blue" Cursor="Hand" ToolTip="View sender details" IsReadOnly="True" FontSize="14"/>
        <Label Content="To:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="33,14,0,0" HorizontalContentAlignment="Right" Width="37" FontSize="14"/>
        <Label Content="Message:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,48,0,0" HorizontalContentAlignment="Right" Width="66" FontSize="14"/>
        <TextBox x:Name="txtMessage" TextWrapping="Wrap" Margin="79,50,10,40" FontSize="14"/>
        <Button x:Name="btnSend" Content="Send" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="69" Margin="0,0,10,10" FontSize="14"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="69" Margin="0,0,84,10" FontSize="14"/>

    </Grid>
</Window>
