<Window x:Class="SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SettingsWindow" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid Background="#FFB2D6F9">
        <ComboBox x:Name="cmbDevices" VerticalAlignment="Top" Margin="60,10,10,0"/>
        <Image Source="pack://siteoforigin:,,,/Resources/not connected.png" Margin="60,42,0,0" HorizontalAlignment="Left" Width="12" Height="12" VerticalAlignment="Top"/>
        <Image x:Name="imgConnected" Source="pack://siteoforigin:,,,/Resources/connected.png"  Margin="60,42,0,0" HorizontalAlignment="Left" Width="12" Height="12" VerticalAlignment="Top" Visibility="Hidden"/>
        <Label Content="Device" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,0,10,10"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,0,90,10"/>
        <Button x:Name="btnTest" Content="Test" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="207,37,0,0"/>
        <Label x:Name="lblConnected" Content="Not Connected" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="77,35,0,0" Height="24"/>
        

    </Grid>
</Window>
